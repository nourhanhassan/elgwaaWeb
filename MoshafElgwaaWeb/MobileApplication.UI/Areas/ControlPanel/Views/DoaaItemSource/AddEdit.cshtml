@using MobileApplication.UI.InfraStructure;
@using MobileApplication.DataModel;

@model MobileApplication.DataModel.ControlPanel.DoaaModels.DoaaItemSourceModel
@{
    ViewBag.Title = "AddEdit";
}

@section NavigationBar{
    @{Html.RenderPartial("_PagePath", new PagePath { PageTitle = " إضافة/تعديل مصدر دعاء", ParentPath = "الرئيسية,إدارة مصادر ومرادفات الدعاء", ParentURLs = "/ControlPanel/DashBoard/Default,/ControlPanel/DoaaItemSource/Default" });  }
}

<div class="container">
    @using (Ajax.BeginForm("Save", "DoaaItemSource", new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        OnSuccess = "Success"
    }, new { @id = "AddEditDoaaItemSourceForm", autocomplete = "off" }))
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="panel panel-green">
            <div class="row setup-content" id="step-1">
                <div class="col-xs-12">
                    <div class="col-md-12 well">

                        <div class="panel-heading">
                            @if (Model.ID == null || Model.ID == 0) //add  mode
                            {
                                <h4>إضافة مصدر دعاء</h4>
                            }
                            else  //Edit mode
                            {
                                <h4>تعديل مصدر دعاء</h4>
                            }
                        </div>
                        <div class="panel-body" ng-controller="AddEditDoaaItemSourceController">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-sm-3 control-label">تصنيف الدعاء</label>
                                        <div class="col-sm-6">
                                            @Html.DropDownListFor(x => x.DoaaID, LookupManger<MobileApplication.DataModel.ControlPanel.DoaaModels.DoaaModel>.GetSelectListItem(), new { @class = "form-control", ng_model = "CurModel.DoaaItemSourceMainCategoryID" })


                                            @Html.ValidationMessageFor(model => model.DoaaID, null,
                                                    new
                                                    {
                                                        @Class = "errorMsg",
                                                        @id = "TitleValidation"
                                                    })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-sm-3 control-label">رقم المصدر</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(x => x.SourceNumber, new { @class = "form-control", placeholder = "رقم المصدر" })

                                            @Html.ValidationMessageFor(model => model.SourceNumber, null,
                                                    new
                                                    {
                                                        @Class = "errorMsg",
                                                        @id = "TitleValidation"
                                                    })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-sm-3 control-label">مصدر الدعاء</label>
                                        <div class="col-sm-6">
                                            @Html.TextAreaFor(x => x.ItemSource, new { @Style = "width: 680px; height: 280px; resize: none", TextMode = "MultiLine", @class = "must-validate" })

                                            @Html.ValidationMessageFor(model => model.ItemSource ,null,
                                                    new
                                                    {
                                                        @Class = "errorMsg",
                                                        @id = "TitleValidation"
                                                    })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-sm-3 control-label">المرادفات </label>
                                        <div class="col-sm-6">
                                            @Html.TextAreaFor(x => x.ItemSynonyms, new { @Style = "width: 680px; height: 280px; resize: none", TextMode = "MultiLine", @class = "must-validate" })

                                            @Html.ValidationMessageFor(model => model.ItemSynonyms)
                                        </div>
                                    </div>
                                </div>

                              

                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-sm-3 control-label">نوع الحديث</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(x => x.Type, new { @class = "form-control" })

                                            @Html.ValidationMessageFor(model => model.Type)
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-sm-3 control-label">راوي الحديث</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(x => x.Reference, new { @class = "form-control" })

                                            @Html.ValidationMessageFor(model => model.Reference)
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="panel-footer">
                            <div class="row">

                                <div class="btn-toolbar pull-left">
                                    <button class="btn-primary btn" name="command" type="submit" value="Save">حفظ</button>
                                    <button class="btn-primary btn" name="command" type="submit" value="SaveAndReturn">حفظ و خروج</button>
                                    <a href="/ControlPanel/DoaaItemSource/Default" class="btn-default btn"> خروج </a>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @section script {
            @Html.Partial("_Popup")
        }
    }


</div>


<link href="~/JSPlugins/QVEditor/qv_editor.css" rel="stylesheet" />
<script src="~/JSPlugins/QVEditor/qv_editor.js"></script>
<script>

    $('#ItemSource').QVEditor();
    $('#ItemSynonyms').QVEditor();
    function Success(data) {
        if (data.ID > 0) {
            debugger;
            ShowConfirmatiomMessage("تأكيد", " تم الحفظ بنجاح");

            if (data.command == "Save") {
                window.location = "/ControlPanel/DoaaItemSource/Add/0";
            }
            else {
                window.location = "/ControlPanel/DoaaItemSource/Default";
            }
        }
        else { ShowErrorMessage(); }
    }

    jQuery.validator.addMethod("RequiredEditor", function (value, element) {
        var html = $(element).val();

        if ($(html).text() == "") {
            return false;
        } else {
            return true;
        }

    }, '@MobileApplication.DataModel.QvDataAnnotation.ValidationMessages.RequiredField');

    $("#ItemSource").rules("add", "RequiredEditor");


</script>